@page
@model MB.Presentation.Razor.Areas.Administrator.Pages.ArticleCategoryManagement.EditModel
@{
}
<div class="card-body">
    <div class="row border">
        <div class="col-md-12">
            <div class="row justify-content-between p-4" style="background-color: #e7e1e1">
                <h1 class="display-4"> Edit @Model.ViewModel.Title</h1>

            </div>
            <form class="form-group py-4" method="post">
                <div class="col-md-6">
                    <label class="col-6" for="title"> Title </label>
                    <input class="col-6" type="text" name="title" value="@Model.ViewModel.Title" />

                </div>
                <div class="col-md-4 justify-content-between">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a class="btn btn-dark m-4" asp-page="./Index"> Go Back</a>
                </div>
            </form>

        </div>
    </div>
</div>