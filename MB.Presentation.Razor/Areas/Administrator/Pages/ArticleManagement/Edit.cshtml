@page "{id:int}"
@model MB.Presentation.Razor.Areas.Administrator.Pages.ArticleManagement.EditModel
@{
}
<div class="card-body">
    <div class="row border">
        <div class="col-md-12">
            <div class="row justify-content-between p-4" style="background-color: #e7e1e1">
                <h1 class="display-4"> Edit @Model.Article.Title</h1>

            </div>
            <form class="form-group py-4" method="post">
                <div class="col-md-8">
                    <input class="col-md-8 border rounded" type="hidden"
                           asp-for="Article.ArticleId"/>
                </div>
                <div class="col-md-8">
                    <label class="col-md-8 p-0" asp-for="Article.Title"> Title </label>
                    <input class="col-md-8 border rounded" type="text"
                           asp-for="Article.Title"/>
                </div>
                <div class="col-md-8">
                    <label class="col-md-8 p-0" asp-for="Article.ShortDescription"> Short Description </label>
                    <textarea class="col-md-8 border rounded" rows="3" type="text"
                              asp-for="Article.ShortDescription" ></textarea>
                </div>
                <div class="col-md-8">
                    <label class="col-md-8 p-0" asp-for="Article.PictureUrl"> Picture Url </label>
                    <input class="col-md-8 border rounded" type="text"
                           asp-for="Article.PictureUrl"/>
                </div>
                <div class="col-md-8">
                    <label class="col-md-8 p-0" asp-for="Article.Body"> Body </label>
                    <textarea class="col-md-8 border rounded" rows="5" type="text" asp-for="Article.Body"
                              value="@Model.Article.Body"></textarea>
                </div>
                <div class="col-md-8">
                    <label asp-for="Article.ArticleCategoryId"></label>
                    <select asp-items="@Model.Categories" asp-for="Article.ArticleCategoryId">
                        <option value=""> Select a category</option>
                    </select>
                </div>
                <div class="col-md-4 justify-content-between">
                    <button type="submit" class="btn btn-success" value="@Model.Article.ArticleId">Save Changes</button>
                    <a class="btn btn-dark m-4" asp-page="./Index"> Go Back</a>
                </div>
            </form>


        </div>
    </div>
</div>